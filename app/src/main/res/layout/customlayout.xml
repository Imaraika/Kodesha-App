<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/imageViewoflist"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <TextView
        android:textSize="25dp"
        android:id="@+id/textView_Road"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@+id/imageViewoflist"
        android:layout_marginEnd="11dp"
        android:layout_marginRight="11dp"
        android:text="TextView" />

    <TextView
        android:textSize="25dp"
        android:id="@+id/textView_descrp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView_Road"
        android:layout_alignTop="@+id/textView_Road"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/imageViewoflist"
        android:layout_marginTop="46dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="-95dp"
        android:text="TextView" />
</RelativeLayout>